{
  "name": "glowup-beauty-shop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tailwind:dev": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./src/output.css --minify",
    "css:dev": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "css:build": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "dev:all": "concurrently \"npm run tailwind:dev\" \"npm run dev\"",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^11.17.0",
    "lucide-react": "^0.477.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.13.0",
    "swiper": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.19",
    "vite": "^7.2.4"
  },
  "description": "GlowUp Beauty Shop - فروشگاه آنلاین محصولات زیبایی و مراقبت از پوست",
  "keywords": [
    "beauty",
    "cosmetics",
    "skincare",
    "react",
    "tailwindcss",
    "persian",
    "فارسی"
  ],
  "author": "GlowUp Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/glowup-beauty-shop"
  },
  "bugs": {
    "url": "https://github.com/yourusername/glowup-beauty-shop/issues"
  },
  "homepage": "https://glowup-beauty.ir",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
